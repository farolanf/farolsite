---
const {frontmatter} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#fde68a" />
    <meta
      name="description"
      content={frontmatter.description || "Farol Apps"}
    />
    <title>{frontmatter.title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body>
    <main class="main">
      <slot />
    </main>
  </body>
</html>

<style>
  .main {
    max-width: 640px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>
